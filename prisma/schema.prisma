generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String
  passwordHash String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  address      String?
  phone        String?
  careCircles  CareCircle[]
  careLogs     CareLog[]
  ownedPets    Recipient[]  @relation("PetOwner")
}

model Recipient {
  id           String       @id @default(cuid())
  name         String
  type         PetType
  breed        String
  birthDate    DateTime
  weight       Float
  specialNeeds String?
  // Behavior / needs flags surfaced as badges on the recipient card.
  // String[] keeps this flexible so we can evolve the canonical list without further schema changes.
  characteristics String[]    @default([])
  ownerId      String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  gender       Gender
  imageUrl     String?      // Keeping this nullable so existing recipients don't break while we roll out photo uploads gradually.
  careCircles  CareCircle[]
  careLogs     CareLog[]
  owner        User         @relation("PetOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}

model CareCircle {
  id          String     @id @default(cuid())
  recipientId String
  userId      String
  role        CircleRole @default(VIEWER)
  grantedAt   DateTime   @default(now())
  recipient   Recipient  @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([recipientId, userId])
  @@index([recipientId])
  @@index([userId])
}

model CareLog {
  id           String       @id @default(cuid())
  recipientId  String
  userId       String
  activityType ActivityType
  notes        String?
  createdAt    DateTime     @default(now())
  recipient    Recipient    @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([recipientId])
  @@index([userId])
  @@index([createdAt])
}

enum PetType {
  DOG
  CAT
}

enum Gender {
  MALE
  FEMALE
}

enum CircleRole {
  OWNER
  CAREGIVER
  VIEWER
}

enum ActivityType {
  FEED
  WALK
  MEDICATE
  BATHROOM
  ACCIDENT
  VOMIT
}
